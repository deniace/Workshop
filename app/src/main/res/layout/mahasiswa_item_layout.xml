<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="5dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/linear_mahasiswa_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NPM Mahasiswa"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/text_npm_mhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="43a8700"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mahasiswa"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/text_nama_mhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deni Supriyatna"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/text_jk_mhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pria"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jurusan"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/text_jurusan_mhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teknik Informatika"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No HP"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/text_no_hp_mhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08988255871"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/text_email_mhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="denisupriyatna01@gmail.com"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agama"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/text_agama_mhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Islam"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>